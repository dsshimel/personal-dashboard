{
  "name": "personal-dashboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "bun run server/index.ts",
    "webcam": "bun run server/webcam-server.ts",
    "dev:all": "concurrently \"bun run dev\" \"bun run server\" \"bun run webcam\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview --host 0.0.0.0 --port 6969",
    "prod:all": "bun run build && concurrently \"bun run preview\" \"bun run server\" \"bun run webcam\"",
    "prod:watch": "bun run build && bun run server/restart-watcher.ts",
    "test:server": "bun test tests/server/"
  },
  "dependencies": {
    "express": "^5.2.1",
    "node-cron": "^4.2.1",
    "prom-client": "^15.1.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "resend": "^6.9.1",
    "web-vitals": "^5.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "bun-types": "^1.3.6",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
